{
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "58.0"
    }
  },
  "background": {
    "scripts": ["imagesearchoptions.js"]
  },
  "description": "Customizable Image Search right click context options",
  "manifest_version": 2,
  "name": "Image Search Options (fork)",
  "version": "3.0.13",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "browser_style": false
  },
  "icons": {
    "16": "icons/iso_16.png",
    "48": "icons/iso_48.png",
    "128": "icons/iso_128.png"
  },
  "permissions": ["storage", "contextMenus", "activeTab", "tabs", "<all_urls>"]
}
